<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/ret_white_so"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_30">

    <!-- 日历时间选择栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:text="2016"
            android:textColor="@color/blue_28"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/iv_year_last"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_year"
            android:background="@drawable/sel_date_last" />

        <ImageView
            android:id="@+id/iv_year_next"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_year_last"
            android:background="@drawable/sel_date_next" />

        <ImageView
            android:id="@+id/iv_month_last"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_month"
            android:background="@drawable/sel_date_last" />

        <ImageView
            android:id="@+id/iv_month_next"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_month_last"
            android:background="@drawable/sel_date_next" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginRight="@dimen/dp_29"
            android:layout_toRightOf="@+id/iv_year_next"
            android:gravity="center_horizontal"
            android:text="5月"
            android:textColor="@color/blue_28"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d6"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/DateTitleSty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="日" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                style="@style/DateTitleSty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="一" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                style="@style/DateTitleSty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="二" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                style="@style/DateTitleSty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="三" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                style="@style/DateTitleSty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="四" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                style="@style/DateTitleSty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="五" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <TextView
                style="@style/DateTitleSty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="六" />

        </LinearLayout>

        <com.longe.weld.ui.view.MonthDateView
            android:id="@+id/monthDateView"
            android:layout_width="match_parent"
            android:layout_height="252dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d6" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="@dimen/dp_195"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@drawable/ret_blue28_so"
        android:text="查&#8195;询"
        android:textColor="@color/white" />
</LinearLayout>